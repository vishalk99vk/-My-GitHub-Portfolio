    0% { text-shadow: 0 0 2px #fff, 0 0 5px #aaa; }
    50% { text-shadow: 0 0 4px #fff, 0 0 10px #aaa; }
    100% { text-shadow: 0 0 2px #fff, 0 0 5px #aaa; }
}
